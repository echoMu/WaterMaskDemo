<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1ea3f6">

        <Button
            android:id="@+id/bt_logo_img"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:background="@null"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_company_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/bt_logo_img"
            android:singleLine="true"
            android:textSize="20sp"
            android:text="单位名称在这里"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_info_text"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/rl_logo"
        android:layout_below="@+id/rl_logo"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        android:text="相关信息相关信息相关信息相关信息相关信息相关信息相关信息相关信息相关信息相关信息"/>

</RelativeLayout>